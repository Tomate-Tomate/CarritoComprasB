    <option value="Personal" selected>Personal</option>
    <option value="D√∫o">D√∫o</option>
    <option value="Tr√≠o">Tr√≠o</option>
  </select>

  <label for="quantity">Cantidad</label>
  <div class="counter">
    <button onclick="updateQuantity(-1)">‚àí</button>
    <span id="quantity">1</span>
    <button onclick="updateQuantity(1)">+</button>
  </div>

  <label>Precio</label>
  <input class="price-box" id="price" type="text" value="$2000" readonly />

  <button class="add-btn" onclick="addToCart()">A√±adir al carrito</button>

  <div class="notification" id="notification">‚úî A√±adido al carrito</div>
  <div class="product-animation" id="animation"></div>
